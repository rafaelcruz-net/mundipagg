@{

    MembershipUser currentUser = null;

    if (this.User.Identity.IsAuthenticated)
    {
        currentUser = Membership.GetUser();
    }

}

<!doctype html>
<html class="no-js" lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>MundiPagg | Desafio</title>
    @Styles.Render("~/Content/css")
    <link rel="stylesheet" href="//code.jquery.com/ui/1.11.4/themes/smoothness/jquery-ui.css">
</head>
<body>

    <div class="top-bar">
        <div class="top-bar-left">
            <ul class="menu">
                <li class="menu-text menu-text-color"><a href="/">Desafio Mundi Pagg</a></li>
            </ul>
        </div>
        <div class="top-bar-right">

            @if (!this.User.Identity.IsAuthenticated)
            {
                <ul class="menu">
                    <li><a class="secondary button" href="/Account/Create">Criar uma conta</a></li>
                    <li><a class="secondary hollow button white-text" href="/Account/Login">Fazer Login</a></li>
                </ul>
            }
            else
            {
                <ul class="menu">
                    <li><a href="#">Seja bem vindo, @currentUser.UserName</a></li>
                    <li><a href="/Ticket/@currentUser.ProviderUserKey/History"><b>Historico de Eventos</b></a></li>
                    <li><a href="/Account/Logout"><b>Sair</b></a></li>
                </ul>
            }

        </div>
    </div>
    <br />
    @RenderBody()
    <footer>
        <div class="row expanded secondary callout">
            <div class="medium-12 columns">
                <ul class="menu align-right">
                    <li class="menu-text">Copyright © @DateTime.Now.Year Desafio MundiPagg</li>
                </ul>
            </div>
        </div>
    </footer>

    <script type="text/javascript" src="~/Scripts/vendor/requirejs/require.js"></script>
    <script type="text/javascript" src="~/Scripts/app/mundipagg.app.js"></script>
    @RenderSection("scripts", false)


</body>
</html>

